<%- include("_header") -%>

    <h1>Calculate Sum of Series Divisible by a number</h1>

    <body>
        <form id="findCustomers" action="/search" method="post">
            <table class="findcustomers">
                <tr>
                    <td>Num 1:</td>
                    <td>
                        <input type="number" id="firstnum" name="firstnum" required>
                    </td>
                    <td>(required)</td>
                </tr>
                <tr>
                    <td>Num 2:</td>
                    <td>
                        <input type="number" id="secondnum" name="secondnum" required>
                    </td>
                    <td>(required)</td>
                </tr>
                <tr>
                    <td>Num 3:</td>
                    <td>
                        <input type="number" id="thirdnum" name="thirdnum" required>
                    </td>
                    <td>(required)</td>
                </tr>
            </table>

            <!-- Submit and Reset buttons -->
            <div class="d-flex justify-content-center">
                <button type="submit">Calculate Sum</button>
            </div>
        </form>

        <div id="searchResults"></div>
    </body>



</html>